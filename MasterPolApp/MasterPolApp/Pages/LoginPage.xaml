<Page x:Class="MasterPolApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPolApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    >
            <StackPanel.Effect>
                <DropShadowEffect/>
            </StackPanel.Effect>
            <Label Content="Логин" HorizontalAlignment="Left"></Label>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <Label Content="Пароль" HorizontalAlignment="Left"></Label>
            <PasswordBox x:Name="LoginPasswordBox"></PasswordBox>
            <Button x:Name="LoginButton" Content="Войти"
                    Click="LoginButton_Click"
                    Margin ="5"></Button>
        </StackPanel> 
    </Grid>
</Page>
