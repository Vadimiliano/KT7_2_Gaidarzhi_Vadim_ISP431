<Page x:Class="MasterPolApp.Pages.AddOrEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPolApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddOrEditPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>

            </Grid.RowDefinitions>

            <Label Content="Наименование" Grid.Row="0" Grid.Column="0"></Label>
            <Label Content="Тип партера" Grid.Row="1" Grid.Column="0"></Label>
            <Label Content="Рейтинг" Grid.Row="2" Grid.Column="0"></Label>
            <Label Content="ФИО директора" Grid.Row="3" Grid.Column="0"></Label>
            <Label Content="Телефон" Grid.Row="4" Grid.Column="0"></Label>
            <Label Content="Email" Grid.Row="5" Grid.Column="0"></Label>

            <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1"></TextBox>
            <ComboBox x:Name="TypeComboBox" Grid.Row="1" Grid.Column="1" DisplayMemberPath="Type"></ComboBox>
            <TextBox x:Name="RatingTextBox" Grid.Row="2" Grid.Column="1"></TextBox>
            <TextBox x:Name="DirectorNameTextBox" Grid.Row="3" Grid.Column="1"></TextBox>
            <TextBox x:Name="PhoneNumberTextBox" Grid.Row="4" Grid.Column="1"></TextBox>
            <TextBox x:Name="EmailTextBox" Grid.Row="5" Grid.Column="1"></TextBox>




            <Label Content="Индекс" Grid.Row="0" Grid.Column="2"></Label>
            <Label Content="Область" Grid.Row="1" Grid.Column="2"></Label>
            <Label Content="Город" Grid.Row="2" Grid.Column="2"></Label>
            <Label Content="Улица" Grid.Row="3" Grid.Column="2"></Label>
            <Label Content="Дом" Grid.Row="4" Grid.Column="2"></Label>

            <TextBox x:Name="IndexTextBox" Grid.Row="0" Grid.Column="3"></TextBox>
            <TextBox x:Name="AreaTextBox" Grid.Row="1" Grid.Column="3"></TextBox>
            <TextBox x:Name="CityTextBox" Grid.Row="2" Grid.Column="3"></TextBox>
            <TextBox x:Name="StreetTextBox" Grid.Row="3" Grid.Column="3"></TextBox>
            <TextBox x:Name="HousNumTextBox" Grid.Row="4" Grid.Column="3"></TextBox>
        </Grid>


        <Grid Grid.Row="1">
            <Button x:Name="GoBackButton" Content="Назад" 
                    Click="GoBackButton_Click"
                    Width="150"
                    Height="30"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="25,0,0,0"></Button>

            <Button x:Name="AddButton" Content="Добавить" 
                    Click="AddButton_Click"
                    Width="150"
                    Height="30"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,25,0"></Button>
        </Grid>
        
    </Grid>
</Page>
